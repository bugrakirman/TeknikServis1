@model TeknikServis.Models.ViewModels.MalfunctionViewModel
@{
    ViewBag.Title = "Malfunction";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}
<div style="padding-bottom:10px;height:550px;" padding-top:10px">
    @using (Html.BeginForm("Add", "Home", FormMethod.Post, new { @class = "form-horizontal", @style = "margin-top:150px", enctype = "multipart/form-data" }))
    {
        <div class="row">
            <div class="offset-3 col-md-6">
                <div style="margin-right:75px" class="card-body">
                    <div class="form-group row">
                        @Html.LabelFor(x => x.Type, new { @style = "margin-top:5px", @class = "col-md-3 m-t-15 text-right control-label col-form-label" })
                        <div class="col-md-9">
                            @Html.EnumDropDownListFor(x => x.Type, "Seçiniz", new { @class = "select2 form-control custom-select", @style = "width: 100%; height:10px;", size = "1" })
                        </div>
                    </div>
                    <div class="form-group row">
                        @Html.LabelFor(x => x.BrandType, new { @style = "margin-top:5px", @class = "col-md-3 m-t-15 text-right control-label col-form-label" })
                        <div class="col-md-9">
                            @Html.EnumDropDownListFor(x => x.BrandType, "Seçiniz", new { @class = "select2 form-control custom-select", @style = "width: 100%; height:10px;", size = "1" })
                        </div>
                    </div>
                    <div class="form-group row">
                        @*@Html.LabelFor(x => x.AvatarPath, new { @style = "margin-top:5px", @class = "col-md-3 m-t-15 text-right control-label col-form-label" })*@
                        <div class="col-md-9">
                            @Html.LabelFor(x => x.PostedFile)
                            @Html.TextBoxFor(x => x.PostedFile, new { @class = "form-control", type = "file", multiple = false })
                            @*@Html.TextBoxFor(x => x.AvatarPath, new { @class = "select2 form-control custom-select", @style = "width: 100%; height:10px;", @type = "file", @multiple = "false" })*@
                        </div>
                    </div>
                    <div class="form-group row">
                        @Html.LabelFor(x => x.Message, new { @style = "margin-top:5px", @class = "col-md-3 m-t-15 text-right control-label col-form-label" })
                        <div class="col-md-9">
                            @Html.TextBoxFor(x => x.Message, new { @class = "select2 form-control custom-select", @style = "width: 100%; height:10px;" })
                        </div>
                    </div>

                </div>
            </div>
        </div>
        <div class="row">
            <div style="margin:auto;margin-top:20px">
                <button type="Submit" class="btn btn-lg btn-primary">Submit</button>
            </div>
        </div>
    }


