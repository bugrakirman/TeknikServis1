    <script>

        $(".select2").select2();


        $(document).ready(function () {

            $("#country").change(function () {

                var a = $(this).val();

                $("#city").empty();

                if (a == "TR") {

                    var v;
                    v += "<option>Edirne</option>";
                    v += "<option>Kırklareli</option>";

                    $("#city").html(v);
                } else if (a == "ALM") {
                    var v;
                    v += "<option>Munich</option>";
                    v += "<option>Berlin</option>";
                    $("#city").html(v);

                } else if (a == "ING") {
                    var v;
                    v += "<option>Londra</option>";
                    v += "<option>Manchester</option>";
                    $("#city").html(v);

                } else if (a == "ITL") {
                    var v;
                    v += "<option>Milano</option>";
                    v += "<option>Roma</option>";
                    $("#city").html(v);

                } else if (a == "AB") {
                    var v;
                    v += "<option>Massachussetts</option>";
                    v += "<option>Nebraska</option>";
                    $("#city").html(v);

                }
            });

        });

        $(function () {
            $('.datepicker').datepicker({
                startDate: '-3d'
            });
        });

    </script>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>

    <script type="text/javascript">

        $(document).ready(function () {
            $(".btn-warning").click(function () {

                var id = this.name;


                var url = $("#myModal").data("url");
                url += "/" + id;

                $.get(url,
                    function (data) {
                        console.log(data);
                        $("#myModal").html(data);
                        $("#myModal").modal("show");
                    });
            });

        });

    </script>

